    // 获取按钮元素
const changeBackgroundBtn = document.getElementById('changeBackgroundBtn');

// 定义两种背景样式
const backgroundStyles = ['background_style1', 'background_style2'];

// 给按钮添加点击事件监听器
changeBackgroundBtn.addEventListener('click', () => {
    // 获取 body 元素
    const body = document.body;

    // 获取当前应用的背景样式
    const currentStyle = getCurrentBackgroundStyle(body);

    // 切换到下一个背景样式
    const nextStyle = getNextBackgroundStyle(currentStyle);

    // 移除当前样式，添加下一个样式
    body.classList.remove(currentStyle);
    body.classList.add(nextStyle);
});

// 获取当前应用的背景样式
function getCurrentBackgroundStyle(element) {
    for (const style of backgroundStyles) {
        if (element.classList.contains(style)) {
            return style;
        }
    }
    // 如果没有匹配的样式，默认使用第一个样式
    return backgroundStyles[0];
}

// 获取下一个背景样式
function getNextBackgroundStyle(currentStyle) {
    const currentIndex = backgroundStyles.indexOf(currentStyle);
    const nextIndex = (currentIndex + 1) % backgroundStyles.length;
    return backgroundStyles[nextIndex];
}

</script>

